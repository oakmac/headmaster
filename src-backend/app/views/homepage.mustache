<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="x-ua-compatible" content="ie=edge">
  <title>Headmaster - Student Tracking Tool</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://unpkg.com/bulma@0.7.5/css/bulma.min.css" integrity="sha384-H5O3U+oUYwd/bFECZMaQ1XJlueV5e1gB4b7Xt0M06fPbgz48WH33qxUyQNPeZVou" crossorigin="anonymous">
  <link rel="stylesheet" href="/css/fontawesome-5.9.0.min.css">
  <link rel="stylesheet" href="/css/main.css">
</head>
<body>

<section class="hero is-primary is-large is-bold">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">Headmaster</h1>
      <h2 class="subtitle">Student Tracking Tool</h2>

      {{^userLoggedIn}}
      <a class="button is-medium" href="/login/github">
        <span class="icon">
          <i class="fab fa-github"></i>
        </span>
        <span>Login with GitHub</span>
      </a>
      {{/userLoggedIn}}

      {{#userLoggedIn}}
        <div class="buttons are-medium">
          {{#cohorts}}
            <a class="button" href="/cohort/{{slug}}">{{name}}</a>
          {{/cohorts}}
        </div>
        <div class="buttons">
          <a class="button is-info" href="/new-cohort">Start New Cohort</a>
          <a class="button" href="/logout">
            <span class="icon">
              <i class="fas fa-sign-out-alt"></i>
            </span>
            <span>Logout</span>
          </a>
        </div>
      {{/userLoggedIn}}

    </div>
  </div>
</section>

</body>
</html>
